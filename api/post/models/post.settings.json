{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "content": {
      "type": "richtext",
      "minLength": 200
    },
    "excerpt": {
      "type": "text",
      "required": true,
      "maxLength": 160,
      "minLength": 50
    },
    "date": {
      "type": "date",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "published",
        "draft"
      ],
      "default": "draft"
    },
    "coverImage": {
      "type": "component",
      "repeatable": false,
      "component": "images.post-image",
      "required": false
    },
    "lang": {
      "type": "enumeration",
      "enum": [
        "de",
        "en"
      ]
    },
    "tags": {
      "collection": "tag",
      "via": "posts"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    }
  }
}
