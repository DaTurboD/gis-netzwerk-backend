{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "content": {
      "type": "richtext",
      "minLength": 200
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "lang": {
      "type": "enumeration",
      "enum": [
        "de",
        "en"
      ]
    },
    "tags": {
      "collection": "tag",
      "via": "posts"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "dateUpdated": {
      "type": "datetime"
    },
    "syndicationLinks": {
      "type": "component",
      "repeatable": true,
      "component": "links.nav-items"
    },
    "positive_feedback_count": {
      "type": "integer",
      "default": 0
    },
    "negative_feedback_count": {
      "type": "integer",
      "default": 0
    },
    "coverImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    }
  }
}
