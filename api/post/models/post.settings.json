{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "content": {
      "type": "richtext",
      "minLength": 200
    },
    "excerpt": {
      "type": "text",
      "required": true,
      "maxLength": 320
    },
    "date": {
      "type": "date",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "author": {
      "model": "author"
    },
    "tags": {
      "collection": "tag",
      "via": "post"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "published",
        "draft"
      ]
    },
    "coverImage": {
      "type": "component",
      "repeatable": false,
      "component": "images.post-image",
      "required": false
    }
  }
}
