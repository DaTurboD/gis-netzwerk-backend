      "type": "boolean"
    },
    "inReplyTo": {
      "type": "boolean"
    },
    "likeOf": {
      "type": "boolean"
    },
    "repostOf": {
      "type": "boolean"
    },
    "quoteOf": {
      "type": "boolean"
    },
    "ofUrl": {
      "type": "string"
    },
    "mentionOf": {
      "type": "boolean",
