{
  "kind": "collectionType",
  "collectionName": "notes",
  "info": {
    "name": "Notes",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "date": {
      "type": "date"
    },
    "content": {
      "type": "richtext"
    },
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "tags": {
      "collection": "tag",
      "via": "note"
    },
    "publishOnTwitter": {
      "type": "boolean"
    },
    "publishOnInstagram": {
      "type": "boolean"
    },
    "ofUrl": {
      "type": "string"
    },
    "publishOnReddit": {
      "type": "boolean"
    },
    "syndicationLinks": {
      "type": "component",
      "repeatable": true,
      "component": "links.nav-items"
    },
    "coverMedium": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Note",
        "Reply",
        "Like",
        "Repost",
        "Checkin",
        "Event"
      ]
    }
  }
}
