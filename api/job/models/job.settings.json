{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "name": "Job"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "jobDescription": {
      "type": "richtext"
    },
    "workingTime": {
      "type": "enumeration",
      "enum": [
        "Vollzeit",
        "Teilzeit"
      ]
    },
    "date": {
      "type": "date"
    },
    "contractType": {
      "type": "enumeration",
      "enum": [
        "unbefristet",
        "befristet"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "vacationDays": {
      "type": "integer"
    },
    "company": {
      "type": "component",
      "repeatable": false,
      "component": "jobs.job-company"
    }
  }
}
